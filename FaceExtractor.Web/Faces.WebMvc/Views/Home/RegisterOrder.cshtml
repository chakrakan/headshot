@model Faces.WebMvc.ViewModels.OrderViewModel

@{ 
    ViewData["Title"] = "Create an order";
}

<div>
    <img src="" />
    <h2>Order a face extraction</h2>
</div>
<form asp-controller="Home" asp-action="RegisterOrder" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-10">
            <h3>Enter your e-mail address and upload your image with faces you want to extract</h3>
            <div class="form-group">
                <label asp-for="UserEmail"></label>
                <input asp-for="UserEmail" class="form-control" />
            </div>
        </div>

        <div class="col-md-10">
            <p>Upload your image file</p>
            <input type="file" name="file" />
        </div>
    </div>
    <input type="submit" class="btn btn-info" value="Submit" />
</form>